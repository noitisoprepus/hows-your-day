@inherits LayoutComponentBase

@using HowsYourDayApp.Services

@inject AuthenticationService AuthenticationService
@inject NavigationManager NavigationManager

<nav class="navbar navbar-expand-lg">
    <a class="navbar-brand" href="#">HowsYourDay</a>
    <div class="navbar-buttons">
        @* <button class="btn btn-link nav-link" @onclick='() => NavigationManager.NavigateTo("/history")'>
            <i class="bi bi-clock-history"></i>
        </button> *@
        <button class="btn btn-link nav-link" @onclick="HandleLogout">
            <i class="bi bi-box-arrow-right"></i>
        </button>
    </div>
</nav>

<div class="page">
    <main>
        <article class="content">
            @Body
        </article>
    </main>
</div>

@code
{
    private async Task HandleLogout()
    {
        await AuthenticationService.LogoutAsync();
        NavigationManager.NavigateTo("/login");
    }
}